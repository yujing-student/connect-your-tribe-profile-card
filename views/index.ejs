<%- include('./partials/head') %><!--maak gebruik van partias voor de header-->


<main>
    <div class="grid-container">
        <section>
            <h1><%= data.name %>
                <%= data.prefix %>
                <%= data.surname %>
            </h1>
        </section>
        <section class="foto-info">
            <img id="image" src="images/image.jpg" height="" alt="Dit is mijn foto">
            <!--dit hoort zo te staan omdat de images anders niet vindbaar is -->
            <p><%= data.avatar %></p>
            <p> Ik ben nu: <%= data.custom.age %>
            </p>
            <p> Bio: <%= data.bio %></p>
            <p> Mijn opleiding: <%= data.custom.opleiding %></p>


        </section>

        <section class="social-media">
            <h2>Social media</h2>
            <ul>
                <li><a href="<%= data.website %>">Link naar github account</a></li>
            </ul>

        </section>
    </div>

</main>

<%- include('./partials/foot') %>
